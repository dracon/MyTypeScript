{
  "compilerOptions": {
  "emitDecoratorMetadata": true,
  "experimentalDecorators": true,
  "target": "es5",
  "module": "system",
  "moduleResolution": "node",
  "removeComments": true,
  "sourceMap": true,
  "rootDir": "src",
  "outDir": "./dist/"
},
"exclude": [
  "node_modules",
    "typings/main",
    "typings/main.d.ts",
    "test"
],
"scripts": {
    "postinstall": "npm run typings install"
  }
}
